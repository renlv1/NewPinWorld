
@media (max-width: 1200px) {
  .mobile {
    display: block;
  }

  .pc {
    display: none;
  }
}

@media (min-width: 1200px) {
  .mobile {
    display: none;
  }

  .pc {
    display: block;
  }
}

@font-face {
  font-family: pixel;
  src: url("/fonts/pixel.ttf");
}

.flex-just-content-center {
  display flex
  flex-direction column
  align-items center
}

.flex-just-content-row-center {
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  @media only screen and (max-width 1200px) {
    flex-direction column
    justify-content space-between
  }
}

.banner-title {
  margin-top 80px
  font-size 80px
  color #7b604f
  font-weight 800
  font-family '微软雅黑 Light'
  text-align center
  @media only screen and (max-width 1200px) {
    margin-top 60px
    font-size 60px
    letter-spacing 3px
  }
  @media only screen and (max-width 768px) {
    padding 0 5px
    margin-top 40px
    font-size 25px
    letter-spacing 4px
    text-align center
  }
  @media only screen and (max-width 768px) {
    padding 0 10px
  }
}

.banner-title-highLight {
  color #67b63b
}

.banner-description {
  font-family "微软雅黑 Light"
  margin-top 40px
  font-size 20px
  color #000
  text-align center
  max-width 700px
  line-height 2
  @media only screen and (max-width 1200px) {
    margin-top 30px
    font-size 18px
  }
  @media only screen and (max-width 768px) {
    margin-top 20px
    font-size 14px
    padding 0 15px
  }
}

.banner-btn {
  margin-top 40px
  color #fff
  font-size 20px
  font-weight 600
  letter-spacing 2px
  cursor pointer
  user-select none
}

.subTitle {
  font-size 70px
  font-weight 600
  color #67b63b
  letter-spacing 5px
  @media only screen and (max-width 1200px) {
    font-size 50px
  }
  @media only screen and (max-width 768px) {
    text-align center
    padding 0 5px
    margin-top 40px
    font-size 25px
  }
}

.subTitleBlueColor {
  font-size 55px
  font-weight 600
  color #7b604f
  margin-bottom 50px
  text-align center
  @media only screen and (max-width 1200px) {
    margin-top 60px
    font-size 60px
    letter-spacing 7px
    margin-bottom 40px
  }
  @media only screen and (max-width 768px) {
    padding 0 5px
    margin-top 40px
    font-size 25px
    letter-spacing 4px
    text-align center
  }
}

.main-description {
  margin 20px 0 40px
  font-family pixel
  font-size 24px
  color #cd9e38
  letter-spacing 15px
  @media only screen and (max-width 1200px) {
    letter-spacing 10px
  }
  @media only screen and (max-width 768px) {
    letter-spacing 5px
    margin 15px 0 30px
  }
}

.main-sub-description {
  font-size 22px
  color #000
  letter-spacing 4px
  text-align center
}

.main-sub-sub-description {
  font-size 18px
  color #000
  text-align center
  line-height 36px
  padding 0 5px
  width 75%
  @media only screen and (max-width 1200px) {
    font-size 16px
    line-height 30px
  }
  @media only screen and (max-width 768px) {
    padding 0 20px
    font-size 14px
    line-height 20px
    line-height 2
    width 100%
  }
}

.main-sub-description-highLight {
  margin-top 50px
  font-size 16px
  color #f02d6a
  text-align center
  padding 0 5px
  line-height 2
  @media only screen and (max-width 1200px) {
    margin-top 30px
    font-size 16px
  }
  @media only screen and (max-width 768px) {
    margin-top 15px
    font-size 14px
    line-height 2
  }
}
